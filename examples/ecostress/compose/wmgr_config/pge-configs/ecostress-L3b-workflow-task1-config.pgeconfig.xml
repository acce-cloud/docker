<?xml version="1.0" encoding="UTF-8"?>
<pgeConfig>

	<!-- PGE commands -->
	<exe dir="[JobDir]" shell="/bin/bash">
		<cmd>cd [JobDir]</cmd>
                <cmd>export PATH=/usr/local/bin:$PATH</cmd>
                <cmd>python [PGE_ROOT]/ecostress/multi_pges.py --run [message_counter] --task 1 --pges 2 --size [size] --heap [heap] --time [time]</cmd>
	</exe>

	<customMetadata>
		<metadata key="ProductionDateTime" val="[DATE.UTC]" />
		<metadata key="JobDir" val="[PGE_ROOT]/ecostress/jobs/[WorkflowInstId]" />
	</customMetadata>

	<!-- CAS Crawler directives -->
	<output>
	  <dir path="[JobDir]" createBeforeExe="false">
            <files regExp="output.*\.out" 
                   metFileWriterClass="org.apache.oodt.cas.pge.writers.metlist.MetadataListPcsMetFileWriter" 
                   args="[OODT_CONFIG]/ecostress/pge-configs/metout-L3b.xml" />
          </dir>
       </output>

</pgeConfig>
