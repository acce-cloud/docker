<?xml version="1.0" encoding="UTF-8"?>
<pgeConfig>

	<!-- PGE commands -->
    <!-- output: 7.9GB = 7900MB  -->
    <!-- time: 8mins = 480secs -->
	<exe dir="[JobDir]" shell="/bin/bash">
      <cmd>cd [JobDir]</cmd>
      <cmd>export PATH=/usr/local/bin:$PATH</cmd>
      <cmd>python [PGE_ROOT]/ecostress/pge.py --out orbit_[orbit]_task_[task]_scene_[scene].out --size 1 --heap 1 --time 10</cmd>
	</exe>

	<customMetadata>
		<metadata key="ProductionDateTime" val="[DATE.UTC]" />
		<metadata key="JobDir" val="[PGE_ROOT]/ecostress/jobs/[WorkflowInstId]" />
	</customMetadata>

	<!-- CAS Crawler directives -->
	<output>
	  <dir path="[JobDir]" createBeforeExe="false">
            <files regExp=".*\.out" 
                   metFileWriterClass="org.apache.oodt.cas.pge.writers.metlist.MetadataListPcsMetFileWriter" 
                   args="[OODT_CONFIG]/ecostress/pge-configs/metout-L3a.xml" />
          </dir>
       </output>

</pgeConfig>
