<cas:tasks xmlns:cas="http://oodt.jpl.nasa.gov/1.0/cas">

  <task id="urn:edrn:LabcasTestInit" name="LabcasTestInit" class="gov.nasa.jpl.edrn.labcas.tasks.LabcasInitTaskInstance">
  
    <conditions />
  
    <configuration>
    
      <!-- input parameters -->
      
      <property name="input.experiment.type" value="integer" />
      <property name="input.experiment.min" value="1" />
      <property name="input.experiment.max" value="99" />
      <property name="input.experiment.title" value="Experiment" />
      <property name="input.experiment.description" value="The experiment sequential number" />
      
      <property name="input.species.type" value="string" />
      <property name="input.species.title" value="Species" />
      <property name="input.species.description" value="The species that was tested" />
      <property name="input.species.value.1" value="humans" />
      <property name="input.species.value.2" value="snakes" />
      <property name="input.species.value.3" value="sharks" />
      
      <!-- output products -->
      <property name="output.product.type" value="urn:edrn:LabcasTestFile"/>
      
    </configuration>
    
    <requiredMetFields>
      <metfield name="experiment" />
      <metfield name="species" />
    </requiredMetFields>
    
  </task>


  <task id="urn:edrn:LabcasTestTask" name="LabcasTestTask" class="org.apache.oodt.cas.pge.StdPGETaskInstance">
  
    <conditions />
  
    <configuration>
      <property name="PGETask_Name" value="LabcasTestTask" />
      <property name="PGETask_ConfigFilePath"
        value="[LABCAS_HOME]/workflows/labcas-test/pge-configs/labcas-test-task-config.pgeconfig.xml"
        envReplace="true" />
      <property name="PGETask_DumpMetadata" value="true" />
      <property name="PCS_WorkflowManagerUrl" value="[WORKFLOW_URL]" envReplace="true" />
      <property name="PCS_FileManagerUrl" value="[FILEMGR_URL]" envReplace="true" />
      <property name="PCS_MetFileExtension" value="met" />
      <property name="PCS_ClientTransferServiceFactory" value="org.apache.oodt.cas.filemgr.datatransfer.LocalDataTransferFactory" />
      <property name="PCS_ActionRepoFile" value="file:[OODT_HOME]/cas-crawler/policy/crawler-config.xml"
        envReplace="true" />
    </configuration>
    
  </task>

</cas:tasks>
